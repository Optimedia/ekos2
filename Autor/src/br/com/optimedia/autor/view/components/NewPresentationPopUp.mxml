<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical"
	title="Novo Tema">
	
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import br.com.optimedia.autor.assets.vo.PresentationVO;
			
			[Bindable]
			public var presentationVO:PresentationVO = new PresentationVO();
			
			[Bindable]
			public var presentationSkins:ArrayCollection = new ArrayCollection();
			
			public function closeMe():void {
				PopUpManager.removePopUp( this );
			}
			
		]]>
	</mx:Script>

	<mx:Form width="100%">
		<mx:FormItem label="Título">
			<mx:TextInput id="titleTextInput" text="{presentationVO.title}" change="presentationVO.title=titleTextInput.text"/>
		</mx:FormItem>
		<mx:FormItem label="Descrição">
			<mx:TextInput id="descriptionTextInput" text="{presentationVO.description}" change="presentationVO.description=descriptionTextInput.text" />
		</mx:FormItem>
		<mx:FormItem label="Skin">
			<mx:ComboBox id="skinComboBox" dataProvider="{presentationSkins}"/>
		</mx:FormItem>
		<mx:FormItem label="Créditos">
			<mx:TextInput id="creditTextInput" />
			<mx:Button label="Buscar" />
		</mx:FormItem>
		<mx:FormItem label="Introdução">
			<mx:TextInput id="introTextInput" />
			<mx:Button label="Buscar" />
		</mx:FormItem>
		<mx:FormItem label="Conclusão">
			<mx:TextInput id="concTextInput" />
			<mx:Button label="Buscar" />
		</mx:FormItem>
	</mx:Form>
	
	<mx:HBox width="100%">
		<mx:Button label="Cancelar" click="closeMe()" />
		<mx:Spacer width="100%" />
		<mx:Button id="saveBtn" label="Salvar" />
	</mx:HBox>
	
</mx:TitleWindow>
