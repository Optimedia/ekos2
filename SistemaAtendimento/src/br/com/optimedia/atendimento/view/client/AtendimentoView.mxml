<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009"
					xmlns:s="library://ns.adobe.com/flex/spark"
					xmlns:mx="library://ns.adobe.com/flex/mx"
					xmlns:controller="br.com.optimedia.atendimento.controller.*"
					width="100%" height="100%" label="sda" show="init(event)">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			
			import mx.events.FlexEvent;

			protected function init(event:FlexEvent):void {
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
		<s:BorderContainer width="100%" height="21" backgroundColor="#CAC9C9">
			<s:HGroup width="100%" height="19" verticalAlign="middle">
				<s:Label fontWeight="bold" text="Nome: "/>
				<s:Label text="{ClienteAtendimento.atendimento.cliente}"/>
				<s:Label fontWeight="bold" text="Protocolo: "/>
				<s:Label text="{ClienteAtendimento.atendimento.protocolo}"/>
				<s:Label text="Atencente: " id="lbAtencente" visible="false" includeInLayout="false"/>
				<s:Label text="" id="txtAtendente" visible="false" includeInLayout="false"/>
				<s:Label fontWeight="bold" text="Sair"/>
			</s:HGroup>
		</s:BorderContainer>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout/>
		</s:layout>
		
	
	<s:VGroup width="250" height="100%">
		<s:Panel id="pn_atendente" width="250" height="232" title="Atendente">
			
		</s:Panel>
		<s:Panel id="pn_cliente" width="250" height="200">
			
		</s:Panel>
	</s:VGroup>
	<s:Panel id="pn_chat" width="100%" height="100%" title="Chat">
	<s:VGroup width="100%" height="100%">
		<s:TextArea id="txtHistoricoChat" width="100%" height="100%" editable="false" enabled="true"/>
		<s:HGroup width="100%" verticalAlign="middle">
			<s:Label text="Mensagem:"/>
			<s:TextInput id="txtMsn" width="100%"/>
			<s:Button label="Enviar"/>
		</s:HGroup>
	</s:VGroup>
	</s:Panel>
	</s:Group>
</s:NavigatorContent>
