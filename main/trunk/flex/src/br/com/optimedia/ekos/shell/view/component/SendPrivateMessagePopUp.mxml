			<mx:TextArea id="messageTextArea" width="100%" height="150"/>
		</mx:FormItem>
	</mx:Form>
	
	<mx:HBox width="100%" paddingRight="15" paddingLeft="15">
		<mx:Button id="cancelBtn" label="Cancelar"/>
		<mx:Spacer width="100%"/>
