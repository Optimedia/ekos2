<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical"
				showCloseButton="true" close="closePopUp()"
				visible="false" creationComplete="init()"
				title="Lembrar Senha" hideEffect="{fadeEffect}" showEffect="{fadeEffect}">
	
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			private function init():void {
				this.visible = true;
			}
			
			public function closePopUp():void {
				this.visible = false;
			}
			
		]]>
	</mx:Script>
	
	<mx:Fade id="removeEffect" alphaFrom="1" alphaTo="0" effectEnd="PopUpManager.removePopUp( this )"/>
	
	<mx:Fade id="fadeEffect"/> 
	
	<mx:HBox width="100%">
		<mx:Text text="E-mail:" />
		<mx:TextInput id="emailTextInput"/>
	</mx:HBox>
	
	<mx:HBox width="100%">
		<mx:Spacer width="100%" />
		<mx:Button id="sendBtn" label="Enviar" />
	</mx:HBox>
	
</mx:TitleWindow>
