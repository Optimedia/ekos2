<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical"
				title="Cadastrar novo usuário" showCloseButton="true" close="closePopUp()">
				
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			public function closePopUp():void {
				PopUpManager.removePopUp( this );
			}
			
		]]>
	</mx:Script>
	
	<mx:Text text="Dados Pessoais" />
	
	<mx:Form width="100%" height="100%">
		<mx:HBox width="100%">
			<mx:FormItem label="Nome:">
				<mx:TextInput id="nameTextInput"/>
			</mx:FormItem>
			<mx:FormItem label="Sobrenome(s):">
				<mx:TextInput id="surnameTextInput"/>
			</mx:FormItem>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:FormItem label="E-mail:">
				<mx:TextInput id="emailTextIput"/>
			</mx:FormItem>
			<mx:Text text="Será enviado um e-mail para confirmação!"/>
		</mx:HBox>
		<mx:FormItem label="Usuário:">
			<mx:TextInput id="usernameTextInput"/>
		</mx:FormItem>
		<mx:HBox width="100%">
			<mx:FormItem label="Senha:">
				<mx:TextInput id="passTextInput"/>
			</mx:FormItem>
			<mx:FormItem label="Confirmar senha:">
				<mx:TextInput id="passConfirmTextInput"/>
			</mx:FormItem>
		</mx:HBox>
	</mx:Form>
	
</mx:TitleWindow>
