<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="horizontal" height="100%" width="100%"
				creationComplete="init()" xmlns:component="br.com.optimedia.ekos.shell.view.component.*"
				horizontalScrollPolicy="off" visible="false" showEffect="fadeEffect">
	
	<mx:Script>
		<![CDATA[
			import br.com.optimedia.ekos.shell.view.component.LoginPanel;
			import mx.managers.PopUpManager;
			import br.com.optimedia.ekos.MainAppFacade;
			
			protected var facade:MainAppFacade = MainAppFacade.getInstance();
			
			private function init():void {
				facade.startup( this );
			}
			
			public function showLoginPanel():void {
				this.visible = false;
				var loginPanel:LoginPanel = new LoginPanel();
				PopUpManager.addPopUp(loginPanel, this, true);
				PopUpManager.centerPopUp(loginPanel);
			}
			
			public function showCockpit():void {
				this.visible = true;
			}
			
		]]>
	</mx:Script>
	
	<mx:Style source="br/com/optimedia/assets/css/MainAppStyle.css"/>
	
	<mx:Fade id="fadeEffect" duration="500"/>
	
	<!--Cockpit-->
	<mx:VBox id="letfColumn" width="180" height="100%" horizontalAlign="center">
		<mx:Image maxWidth="180" height="32"/>
		<mx:Panel id="avatarPanel" styleName="avatarPanel" width="100%" minHeight="224" horizontalAlign="center">
			<mx:Image maxWidth="160" maxHeight="160" source="br/com/optimedia/assets/imgs/defaultAvatar.png" />
			<mx:Text maxWidth="160" text="Nome do camarada" />
		</mx:Panel>
		<mx:Panel id="appPanel" styleName="appPanel" title="Aplicações do camarada" width="100%">

		</mx:Panel>
		<mx:Panel id="contactsPanel" styleName="contactsPanel" width="100%" minHeight="224"
			title="Contatos do camarada">
			<mx:ControlBar />
		</mx:Panel>
	</mx:VBox>
	
	<mx:VBox id="mainColumn" width="100%" height="100%" backgroundColor="#555555">
		<mx:HBox width="100%" height="32" verticalAlign="middle" backgroundColor="#888888" >
			<mx:ButtonBar width="100%" />
			<mx:Button id="logoutBtn" label="Sair" />
		</mx:HBox>
	</mx:VBox>
	
</mx:Application>
