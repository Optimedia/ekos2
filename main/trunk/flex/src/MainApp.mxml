<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="absolute" height="100%" width="100%"
				creationComplete="init()" xmlns:components="assets.components.*">
	
	<mx:Script>
		<![CDATA[
			import shell.MainAppFacade;
			
			//public static const NAME:String = "MainApp";
			
			protected var facade:MainAppFacade = MainAppFacade.getInstance();
			
			private function init():void {
				facade.startup( this );
			}
			
		]]>
	</mx:Script>
	
	<mx:List id="contentList" selectable="false" height="100%" backgroundAlpha="0.2" borderStyle="none"
				width="350">
		<mx:itemRenderer>
		<mx:Component>
			<components:ContentContainer dataProvider="{data}" width="100%"/>
		</mx:Component>
		</mx:itemRenderer>
	</mx:List>
	
</mx:Application>
